<div class="container">
    <h1>Browse all articles</h1>

    <div class="flex-row align-center justify-end">
        <div class="dropdown">
            <button class="dropbtn">Sort articles by:</button>
            <div class="dropdown-content">
                <a href="articles-all-date-desc">Date: Newest first</a>
                <a href="articles-all-date-asc">Date: Oldest first</a>
                <a href="articles-all-title-az">Title: A-Z</a>
                <a href="articles-all-title-za">Title: Z-A</a>
                <a href="articles-all-username-az">Author's username: A-Z</a>
                <a href="articles-all-username-za">Author's username: Z-A</a>
            </div>
        </div>
        {{#if user}}
        <button class="new-button"><a href="./create-article">Create new article</a></button>
        {{/if}}

    </div>

    <div>
        {{#each articles}}
        <div class="article">
            <h2>{{this.title}}</h2>
            <h6> Written by <span class="author"> {{this.username}} </span> on {{this.created_datetime}} </h6>
            <input value="{{this.article_id}}" hidden>
            <p>{{{this.content}}}</p>

            {{#if this.image}}
            <img src="{{this.image}}" alt="">
            {{/if}}

    
        </div>
        {{/each}}
    </div>

</div>