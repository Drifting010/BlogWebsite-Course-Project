<div class="container">
    <h1>Edit your article</h1>

    <form action="./publish-changes" method="POST" class="form" id="formArticle" enctype="multipart/form-data">
        <input type="hidden" name="article_id" value="{{article.article_id}}">
        <div class=" flex-col mb">
            <label for="article-title">Title:</label>
            <input type="text" name="title" id="article-title" required value="{{article.title}}">
        </div>

        <div class="grid-2 flex-row align-center justify-center">
            <div>
            <img src="/uploadedFiles/{{article.image}}" width="80%" alt="">
            </div>
            <div>
            <label for="inpFile" class="mb">Change image:</label>
            <input class="mb" id="inpFile" type="file" name="imageFile" accept=".png,.jpg,.jpeg,.bmp">
            </div>
        </div>


        <div class="mb">
            <textarea name="content" id="article-text">{{{article.content}}}</textarea>
        </div>

        <div class="flex-row justify-sb align-center">
            <button type="submit">Publish article</button>
        </div>

    </form>
</div>