<div class="login-container">

    <h1>Login</h1>
    <form action="./login" method="POST">
        <div class="flex-col mb">
            {{#if errorMessage}}
            <div class="error"><p>test username error{{errorMessage}}</p></div>
            {{/if}}
            <label for="txtUsername">Username:</label>
            <input type="text" name="username" id="txtUsername" required>
        </div>

        <div class="flex-col mb">
            {{#if errorMessage}}
            <div class="error"><p>{{errorMessage}}</p></div>
            {{/if}}
            <label for="txtPassword">Password:</label>
            <input type="password" name="password" id="txtPassword" required>
        </div>

        <div class="flex-row justify-sb align-center">
            <button type="submit">Log in</button>
        </div>
    </form>

    <p>Don't have an account? <a href="./newaccount">Create one here!</a></p>

</div>